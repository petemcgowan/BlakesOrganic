<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idRLContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coffee_logo_blue"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cover"
        android:layout_width="355dp"
        android:layout_height="381dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/history_organic_coffee_beans_large_crop"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/logoSplash"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:layout_below="@id/cover"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher_round_splash_upscayl_4x_ultrasharp_brushup"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

    <!--on below line we are creating progress bar
    idPBLoading  -->
    <ProgressBar
        android:id="@+id/idPBLoading"
        android:layout_width="64dp"
        android:layout_height="79dp"
        android:layout_below="@id/logoSplash"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/white" />

</RelativeLayout>